{
  "name": "rescript-nextjs-template",
  "namespace": false,
  "reason": { "react-jsx": 3 },
  "refmt": 3,
  "bs-dependencies": ["@rescript/react"],
  "ppx-flags": [
    ["tailwind-ppx", "-path styles/.tailwind.dev.css"]
  ],
  "sources": [
    {
      "dir": "src",
      "subdirs": true,
      "generators": [
        {
          "name": "gen-tailwind",
          "edge": ["../styles/.tailwind.dev.css", ":", "../styles/main.css"]
        }
      ]
    }
  ],
  "package-specs": {
    "module": "es6",
    "in-source": true
  },
  "suffix": ".mjs",
  "warnings": {
    "number": "-3",
    "error": "+101+8"
  },
  "gentypeconfig": {
    "language": "untyped",
    "shims": []
  },
  "generators": [
    {
      "name": "gen-tailwind",
      "command": "postcss $in -o $out"
    }
  ]
}
